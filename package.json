	"scripts": {
		"debug": "NODE_ENV=dev node debug app.js",
		"server:dev": "NODE_ENV=dev sails lift",
		"server:prod": "NODE_ENV=prod node app.js",
		"build:prod": "NODE_ENV=prod node node_modules/webpack/bin/webpack.js -p --progress",
		"build:integration": "NODE_ENV=test node node_modules/webpack/bin/webpack.js",

		"test:server": "NODE_ENV=test mocha --recursive ./test/server/bootstrap.js ./test/server",
		"test:server:watch": "NODE_ENV=test nodemon -w ./api -w ./test/server -e js -x mocha --recursive ./test/server/bootstrap.js ./test/server",

		"test:client": "NODE_ENV=test mocha --recursive --compilers js:babel-core/register ./test/client/bootstrap.js ./test/client",
		"test:client:watch": "NODE_ENV=test nodemon -w ./src -w ./test/client -e js -x mocha --recursive --compilers js:babel-core/register ./test/client/bootstrap.js ./test/client",

		"test:integration": "npm run build:integration; npm run test:integration:run",
		"test:integration:watch": "npm run build:integration; NODE_ENV=test nodemon -w ./test/integration -e js -x npm run test:integration:run",
		"test:integration:run": "NODE_ENV=test mocha --recursive ./test/integration/bootstrap.js ./test/integration"
	},
	"main": "app.js",
